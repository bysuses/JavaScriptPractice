<h2>Edytujesz {{client.name}}</h2>

<form method="POST" action="/client/{{client.id}}?_method=PUT">
  <label for="">
    <p>
      E-mail:
    </p>
    <p>
      <input type="email" name="email" value="{{client.email}}">
    </p>
  </label>
  <label for="">
    <p>
      Imię:
    </p>
    <p>
      <input type="text" name="name" value="{{client.name}}">
    </p>
  </label>
  <label for="">
    <p>
      Data następnego kontaktu:
    </p>
    <p>
      <input type="date" name="nextContactAt" value="{{client.nextContactAt}}">
    </p>
  </label>
  <label for="">
    <p>
      Notatki:
    </p>
    <p>
      <textarea name="notes" id="" cols="30" rows="10">{{client.notes}}</textarea>
    </p>
  </label>
  <p>
    <button type="submit">Zapisz</button>
  </p>
</form>